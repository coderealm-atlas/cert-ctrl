{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_VERBOSE_MAKEFILE": "ON"
      },
      "environment": {}
    },
    {
      "name": "release",
      "inherits": "default",
      "description": "Release build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux-cpp17",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake"
      },
      "environment": {
        "CMAKE_BUILD_PARALLEL_LEVEL": "$env{CORES}"
      }
    },
    {
      "name": "openssl3-dynamic",
      "inherits": "default",
      "description": "Release build that links dynamically against the host OpenSSL 3 toolchain",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/openssl3-dynamic",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux-cpp17",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "USE_SYSTEM_OPENSSL": "ON",
        "BUILD_SHARED_LIBS": "ON",
        "CERTCTRL_STATIC_RUNTIME": "OFF"
      },
      "environment": {
        "CMAKE_BUILD_PARALLEL_LEVEL": "$env{CORES}"
      }
    },
    {
      "name": "debug",
      "inherits": "default",
      "description": "Debug build t630",
      "binaryDir": "${sourceDir}/build/debug",
      "environment": {
        "ASAN_OPTIONS": "allocator_may_return_null=1",
        "CMAKE_BUILD_PARALLEL_LEVEL": "36",
        "CMAKE_MAKE_PROGRAM": "colormake",
        "VCPKG_DEFAULT_BINARY_CACHE": "/home/jianglibo/vcpkg-dir/vcpkg_binary_cache",
        "BDE_CXX": "/usr/bin/clang++",
        "BDE_CC": "/usr/bin/clang"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_ASAN": "OFF",
        "VCPKG_TARGET_TRIPLET": "x64-linux-cpp17",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CUDA_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "THREADS_PREFER_PTHREAD_FLAG": "ON",
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld -pthread",
        "BSLS_PLATFORM_CMP_CLANG": "1",
        "CMAKE_CXX_FLAGS": "-DBSLS_PLATFORM_CMP_CLANG=1"
      }
    },
    {
      "name": "debug-asan",
      "inherits": "debug",
      "description": "Debug build with AddressSanitizer",
      "binaryDir": "${sourceDir}/build/debug-asan",
      "cacheVariables": {
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "suse-debug-asan",
      "inherits": "debug-asan",
      "description": "Debug + ASAN build on SUSE using system OpenSSL",
      "binaryDir": "${sourceDir}/build/suse-debug-asan",
      "cacheVariables": {
        "USE_SYSTEM_OPENSSL": "ON",
        "BUILD_SHARED_LIBS": "ON",
        "CERTCTRL_STATIC_RUNTIME": "OFF"
      }
    },
    {
      "name": "w64",
      "inherits": "default",
      "description": "Compile for Windows using Visual studio",
      "binaryDir": "${sourceDir}/build/w64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "VCPKG_HOST_TRIPLET": "x64-windows",
        "VCPKG_DEFAULT_TRIPLET": "x64-windows",
        "VCPKG_DEFAULT_HOST_TRIPLET": "x64-windows",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake"
      },
      "environment": {
        "PATH": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.44.35207/bin/Hostx64/x64;C:/Program Files (x86)/Windows Kits/10/bin/10.0.26100.0/x64;$penv{PATH}",
        "INCLUDE": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.44.35207/include;C:/Program Files (x86)/Windows Kits/10/Include/10.0.26100.0/ucrt;C:/Program Files (x86)/Windows Kits/10/Include/10.0.26100.0/shared;C:/Program Files (x86)/Windows Kits/10/Include/10.0.26100.0/um;C:/Program Files (x86)/Windows Kits/10/Include/10.0.26100.0/winrt;C:/Program Files (x86)/Windows Kits/10/Include/10.0.26100.0/cppwinrt;$penv{INCLUDE}",
        "LIB": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.44.35207/lib/x64;C:/Program Files (x86)/Windows Kits/10/Lib/10.0.26100.0/ucrt/x64;C:/Program Files (x86)/Windows Kits/10/Lib/10.0.26100.0/um/x64;$penv{LIB}"
      }
    },
    {
      "name": "release-compat",
      "inherits": "default",
      "description": "Release build with broad compatibility for older Linux systems (Ubuntu 20.04+)",
      "binaryDir": "${sourceDir}/build/release-compat",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux-cpp17",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_CXX_FLAGS": "-O2 -DNDEBUG -fno-stack-protector",
        "CMAKE_C_FLAGS": "-O2 -DNDEBUG -fno-stack-protector",
        "CMAKE_EXE_LINKER_FLAGS": "-static-libgcc -static-libstdc++",
        "CMAKE_SHARED_LINKER_FLAGS": "-static-libgcc -static-libstdc++",
        "CERTCTRL_FORCE_LEGACY_GLIBCXX_ABI": "OFF",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "DISABLE_LTO": "ON"
      },
      "environment": {
        "CMAKE_BUILD_PARALLEL_LEVEL": "$env{CORES}"
      }
    },
    {
      "name": "alpine-release",
      "inherits": "default",
      "description": "Release build targeting Alpine/musl via Docker",
      "binaryDir": "${sourceDir}/build/alpine-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux-musl",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "USE_SYSTEM_OPENSSL": "ON",
        "BUILD_SHARED_LIBS": "ON"
      },
      "environment": {
        "CMAKE_BUILD_PARALLEL_LEVEL": "$env{CORES}"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "configurePreset": "default"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "openssl3-dynamic",
      "configurePreset": "openssl3-dynamic"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "debug-asan",
      "configurePreset": "debug-asan"
    },
    {
      "name": "suse-debug-asan",
      "configurePreset": "suse-debug-asan"
    },
    {
      "name": "w64",
      "configurePreset": "w64"
    },
    {
      "name": "release-compat",
      "configurePreset": "release-compat"
    },
    {
      "name": "alpine-release",
      "configurePreset": "alpine-release"
    }
  ]
}
